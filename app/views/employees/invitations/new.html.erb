<h2><%= t "devise.invitations.new.header" %></h2>

<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "employees/shared/error_messages", resource: resource %>

  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="field">
      <%= f.label field %><br />
      <%= f.text_field field %>
    </div>
  <% end -%>
    <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
  <%= f.label :division %>
  <%= f.select :division_id, Division.all.collect { |d| [ d.name, d.id ] }, include_blank: true %>
  </div>
   <div class="field">
   <%= f.label :master_role %>
   <%= f.select :master_role_id, MasterRole.all.collect { |r| [ r.name, r.id ] }, include_blank: true %>
  </div>
    <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username%>
  </div>

  <div class="actions">
    <%= f.submit t("devise.invitations.new.submit_button") %>
  </div>
<% end %>
<button type="button" class="btn btn-primary"><%= link_to "Back", :back , class:"btn" %></button>
