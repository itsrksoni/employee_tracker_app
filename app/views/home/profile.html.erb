<h1>My Profile</h1>
<table class="table" style="text-align:left;">
    <p><%=link_to "Edit",edit_employee_registration_path(current_employee.id)%></p>
    <% if current_employee.image.attached?%>
    <tr>
        <td><%= image_tag current_employee.image.variant(resize_to_limit: [100, 100]) %></td>
    </tr>
    <%end%>
    <tr>
        <td><b> Username :</b> <%= current_employee.username%></td>
    </tr>
    <tr>
        <td><b>Name :</b> <%= current_employee.name%></td>
    </tr>
    <tr>
        <td><b>Email :</b> <%= current_employee.email%></td>
    </tr>
</table>
<button type="button" class="btn btn-primary"><%= link_to "Back", :back , class:"btn" %></button>